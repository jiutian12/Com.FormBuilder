<style>
    body {
        overflow: hidden;
    }

    .dropdown-menu > li > a {
        line-height: 1.428571429;
    }

    .lee-slide-mask {
        position: absolute;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0;
        filter: alpha(opacity=65);
        opacity: 0.65;
        background: #FFFFFF;
        font-size: 1px;
        overflow: hidden;
        display: none;
        z-index: 10000;
    }

    .lee-slide-container {
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        width: 400px;
        background: #fff;
        padding-bottom: 46px;
        -webkit-box-shadow: 0 7px 21px rgba(0,0,0,.3);
        box-shadow: 0 7px 21px rgba(0,0,0,.3);
        overflow: hidden;
        z-index: 10010;
        display: none;
        animation-duration: .3s;
        animation-fill-mode: both;
    }

    .lee-slide-header {
        height: 40px;
        border-bottom: 1px solid #DDD;
        position: relative;
        line-height: 40px;
        background: #f9f9f9;
    }

    .lee-slide-header span {
        font-size: 16px;
        margin-left: 10px;
    }

    .lee-slide-header a {
        position: absolute;
        right: 0;
        top: 0px;
        display: block;
        height: 39px;
        width: 36px;
        text-align: center;
        cursor: pointer;
        color: #757474;
        font-size: 16px;
    }

    .lee-slide-header a:hover {
        background: #ebebeb;
    }

    .lee-slide-header .refresh {
        right: 36px;
    }



    .timeline {
        padding-top: 20px;
        padding-bottom: 100px;
    }

    .timeline dl:after {
        clear: both;
    }


    .timeline {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .lee-slide-content {
        position: absolute;
        top: 40px;
        bottom: 0;
        left: 0;
        right: 0;
        overflow: auto;
        padding-top: 10px;
        padding-left: 15px;
    }

    .timeline-item {
        position: relative;
        padding: 0 0 12px;
        list-style: none;
        margin: 0;
    }

    .timeline .tail {
        position: absolute;
        left: 5px;
        top: 0;
        height: 100%;
        border-left: 2px solid #e9e9e9;
    }

    .timeline-item-pending .tail {
        display: none;
    }

    .timeline .head {
        position: absolute;
        width: 12px;
        height: 12px;
        background-color: #fff;
        border-radius: 100px;
        border: 2px solid transparent;
    }

    .timeline .blue {
        border-color: #108ee9;
        color: #108ee9;
    }

    .timeline .red {
        border-color: #f04134;
        color: #f04134;
    }

    .timeline .green {
        border-color: #00a854;
        color: #00a854;
    }

    .timeline .custom {
        position: absolute;
        text-align: center;
        width: 40px;
        left: -14px;
        line-height: 1;
        margin-top: 6px;
        border: 0;
        height: auto;
        border-radius: 0;
        padding: 3px 0;
        font-size: 12px;
        -webkit-transform: translateY(-50%);
        -ms-transform: translateY(-50%);
        transform: translateY(-50%);
    }

    .timeline .content {
        padding: 0 0 10px 24px;
        font-size: 12px;
        position: relative;
        top: -3px;
    }

    .timeline .content b {
        font-size: 14px;
        font-weight: bold;
    }

    .timeline .content .time {
        margin-left: 10px;
    }

    .timeline .content p {
        margin-top: 10px;
    }

    .timeline .timeline-item:last-child .tail {
        border-left: 2px dotted #e9e9e9;
        display: none;
    }

    .timeline .timeline-item:last-child .content {
        min-height: 48px;
    }
</style>


