<style>
    .lee-nav {
        background: none;
        /*border-bottom: 1px solid #dedede;*/
        /*background-image: linear-gradient(143deg,#2865e2 20%,#2b83f9 81%,#3a9dff);*/
        background-color: #1E9FFF;
    }

    .lee-nav > ul > li > a {
        background-color: transparent;
        font-size: 14px;
    }

    .lee-nav > ul > li > a:focus, .lee-nav > ul > li > a:hover {
        background-color: #2f5991;
        background-color: #4d84cd;
        background-color: rgba(51, 51, 51, 0.1);
    }

    .lee-nav > ul > li > a:hover {
    }

    .lee-navbar .nav-child li > a:hover {
        /*background: #fbfbfb;*/
    }

    .lee-tab-links li {
        border-radius: 0;
    }

    .lee-tab-links li.lee-selected {
        border-radius: 0;
        border-top: 2px solid #108ee9;
    }



    .lee-menu {
        border-radius: 0;
        box-shadow: 0 1px 9px rgba(136, 136, 136, 0.59);
    }

    .lee-menu-item.lee-menu-item-over,
    .lee-menu-item:hover {
        background: #2196F3;
        color: #FFF;
    }


    .tooglebtn {
        display: inline-block;
        height: 43px;
        line-height: 42px;
        padding: 0 10px;
        color: #FFF;
        border: 0;
        font-size: 27px;
        position: absolute !important;
        left: 230px;
        top: 0;
    }

    .lee-tab-links {
        font-size: 14px;
        min-height: 37px;
    }


    .lee-tab-links-item-close {
        top: 10px;
        opacity: 1;
        transition: none;
    }

    .lee-tab-links-item-close:hover {
        background: #FF5722;
        border-radius: 76%;
        color: #FFF;
    }

    .lee-tab-links li {
        margin-left: -1px;
        border-top: 0;
        padding: 8px 20px;
        border-color: #efecec;
        background: transparent;
    }

    .lee-tab-links li.lee-tab-hasclose {
        padding-right: 25px;
    }

    .lee-tab-links li.lee-selected {
        border-radius: 0;
        border-top: 1px solid #DDD;
        border-top: 0;
        background: #f5f5f5;
        border-bottom-color: #f5f5f5;
        border-left-color: #f5f5f5;
        border-right-color: #f5f5f5;
    }

    .lee-tab-links li.lee-selected:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 2px;
        border-radius: 0;
        background-color: #292B34;
        transition: all .3s;
        -webkit-transition: all .3s;
    }

    .lee-tab-links li {
        border-bottom-color: #f9f9f9;
    }

    .lee-menu-item {
        transition: none;
    }

    .dropdown-menu > li > a {
        padding: 9px 20px;
        font-size: 14px;
    }
    .lee-nav .avatar > img {
        height:28px;
    }
    .lee-nav .avatar {
        position:absolute;
        top:8px;
    }
    .lee-nav .username {
        padding-left:35px;
    }
</style>
