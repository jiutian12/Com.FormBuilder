    }

    .lee-tab-links li {
        border-radius: 0;
    }

    .lee-tab-links li.lee-selected {
        border-radius: 0;
        border-top: 2px solid #108ee9;
    }



    .lee-menu {
        border-radius: 0;
        box-shadow: 0 1px 9px rgba(136, 136, 136, 0.59);
    }

    .lee-menu-item.lee-menu-item-over,
    .lee-menu-item:hover {
        background: #2196F3;
        color: #FFF;
    }


    .tooglebtn {
        display: inline-block;
        height: 43px;
        line-height: 42px;
        padding: 0 10px;
        background: #FFF;
        border: 0;
        font-size: 27px;
        position: absolute !important;
        left: 230px;
        top: 0;
    }

    .lee-tab-links li {
        margin-left: -1px;
        border-top: 0;
    }

    .lee-tab-links li.lee-selected {
        border-radius: 0;
        border-top: 1px solid #DDD;
        border-top: 0;
    }

    .lee-tab-links li.lee-selected:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 2px;
        border-radius: 0;
        background-color: #292B34;
        transition: all .3s;
        -webkit-transition: all .3s;
    }
    .lee-tab-links li {
        border-bottom-color:#f9f9f9;
    }
</style>
