@using FormBuilder.Utilities
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/FormBuilder/Views/Layout/BaseListContainer.cshtml";
}


<style>
    .banner, .logo_box:before, .header:before {
        background: url(/FormBuilder.Web/CSS/images/2.jpg);
    }

    .banner {
        z-index: 1;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-size: cover;
        background-attachment: fixed;
        background-position: center center;
    }

    .logo_box:before {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: -1;
        box-sizing: border-box;
        background-position: center center;
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        content: '';
        -webkit-filter: blur(4px) brightness(1.0);
        filter: blur(4px) brightness(1.0);
        clip-path: inset(0);
    }

    .logo_box {
        width: 500px;
        color: #EEE;
        position: absolute;
        left: 50%;
        top: 50%;
        margin-left: -250px;
        margin-top: -200px;
        z-index: 200;
        background: rgba(215, 215, 215, 0.12);
        border-radius: 5px;
        box-shadow: 0px 1px 6px #898989;
        /*background: rgba(0, 0, 0, 0.4);*/
        border-radius: 5px;
        box-shadow: 0px 1px 10px #757575;
        box-shadow: 0px 20px 60px rgba(0,0,0,0.4), 0px 0px 150px rgba(0,0,0,0.4);
    }

    .logo_box h3 {
        text-align: center;
        font: 20px "microsoft yahei",Helvetica,Tahoma,Arial,"Microsoft jhengHei",sans-serif;
        color: #FFFFFF;
        margin-left: 20px;
        margin-right: 20px;
        display: block;
        padding: 0 0 15px 0;
        margin-top: 35px;
    }

    .input_outer {
        height: 46px;
        padding: 0 5px;
        margin-bottom: 20px;
        border-radius: 0px;
        position: relative;
        border: rgba(255,255,255,0.2) 2px solid !important;
        border: rgba(77, 77, 77, 0.2) 2px solid !important;
        border: rgb(187, 187, 187) 2px solid !important;
        margin-left: 22px;
        margin-right: 22px;
    }

    .u_user {
        width: 25px;
        height: 25px;
        background: url(/FormBuilder.Web/CSS/images/login_ico.png);
        background-position: -125px 0;
        position: absolute;
        margin: 10px 13px;
    }

    .us_uer {
        width: 25px;
        height: 25px;
        background-image: url(/FormBuilder.Web/CSS/images/login_ico.png);
        background-position: -125px -34px;
        position: absolute;
        margin: 10px 13px;
    }

    .text {
        width: 371px;
        height: 42px;
        outline: none;
        display: inline-block;
        font: 14px "microsoft yahei",Helvetica,Tahoma,Arial,"Microsoft jhengHei";
        margin-left: 50px;
        border: none;
        background: none;
        line-height: 42px;
    }


    .act-but {
        padding: 15px;
        margin-top: 20px;
        display: block;
        line-height: 20px;
        text-align: center;
        font-size: 20px;
        border-radius: 50px;
        background: #0096e6;
    }

    .header {
        height: 40px;
        z-index: 2;
        position: relative;
        background: #0000004f;
        color: #FFF;
        line-height: 40px;
    }

    form {
        padding: 30px 13px 60px 13px;
        background: #fff;
        background: rgba(255,255,255,0.8);
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
    }
</style>
<div class="header">

</div>
@section ExternalScripts{
    <script src="~/Scripts/Login/main.js"></script>

    @Html.Raw("<script>var callbackurl=" + (ViewData["callbackurl"] == null ? "\"\"" : "\"" + BASE64.DeCode(ViewData["callbackurl"].ToString()) + "\"") + ";</script>")

}

<div class="banner">

</div>

<style>
    .reverse {
        -webkit-box-reflect: below -13px -webkit-gradient(linear, left top, left bottom, from(transparent), to(rgba(255, 255, 255, 0.2)));
    }

    .h3 {
        height: auto;
    }
</style>

<div class="logo_box">
    <h3><a href="#" class="reverse" style="font-size: 22px;color:#FFF;display:block;height:40px;"><i style="font-size: 18px;margin-right: 5px;" class="lee-ion-social-foursquare"></i>FormBulider<span style="font-size:14px;margin-left:10px;">login</span></a></h3>
    <form action="#" name="f" method="post" style="">
        <div class="input_outer">
            <span class="u_user "></span>
            <input name="logname" id="userAccount" class="text" style="color: #4c4c4c !important" type="text" placeholder="请输入账户">
        </div>
        <div class="input_outer">
            <span class="us_uer"></span>
            <input name="logpass" id="userPwd" class="text" style="color: #4c4c4c !important; position:absolute; z-index:100;" value="" type="password" placeholder="请输入密码">
        </div>
        <div class="mb2"><a class="lee-btn lee-btn-primary submit" href="javascript:;" id="btnLogin" style="float:right;margin-right:20px;">登录</a></div>
    </form>
</div>

<div class="footer">

</div>